<header>
    <style>
        .breadcrumb {
            margin: 0;
            padding: 20px 30px;
            background: none;
        }
    </style>
    <ol class="breadcrumb">
        <li><a href="{{ baseUrl() }}">{{ translate('Home') }}</a></li>
        <li class="active">{{ truncate(page.title, 80) }}</li>
    </ol>
</header>
<main style="display: block; padding: 0 30px 30px; min-height: 300px;">
    <style>
        hr {
            border-color: currentColor;
        }
    </style>
    <h1 style="margin: 0 0 30px;">{{ page_title }}</h1>
    <div>
        {{ page_body | raw }}
    </div>
</main>
