<header>
    <style>
        .breadcrumb {
            margin: 0;
            padding: 20px 30px;
            background: none;
        }
    </style>
    <ol class="breadcrumb">
        <li><a href="{{ baseUrl() }}">{{ translate('Home') }}</a></li>
        <li class="active">{{ translate('Pages') }}</li>
    </ol>
</header>
<main style="padding: 0 30px 30px;">
    <a href="{{ url('maniple-pages.pages.create') }}" class="btn btn-primary pull-right">
        <i class="fa fa-plus"></i> {{ translate('Create page') }}
    </a>
    <h1>{{ translate('Pages') }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>{{ translate('Title') }}</th>
            <th>{{ translate('Author') }}</th>
            <th>{{ translate('Modified') }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.title }}</td>
                <td>{{ userFullName(page.user) }}</td>
                <td>{{ page.updated_at | date('Y-m-d H:i') }}</td>
                <td>
                    {#
                    <a href="{{ url('maniple-user.users.edit', { user_id: user.id }) }}{% if returnUrl %}?return_url={{ returnUrl | url_encode }}{% endif %}" class="btn-edit" title="{{ translate('Edit') }}">
                        <i class="fa fa-pencil"></i>
                    </a>
                    #}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</main>
